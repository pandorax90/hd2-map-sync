// BU2_ugxplo07 - underground explosion effect
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Frame ugxplo07;
	FRM_GetMyFrame(ugxplo07);
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
Whenever detector(_SignalReceived(1))	// received from ugxplo07trig
{
	PlaySound(6, 5);
	MakeExplosion(ugxplo07, 0, 3000);
	FRM_CreateParticle(51, ugxplo07);
	SetWhenever(detector, true);
	GoTo end;
}

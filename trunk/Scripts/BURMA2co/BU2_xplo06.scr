// BU2_xplo06 - explosion effect
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Block
{
Frame me;
	FRM_GetMyFrame(me);
Frame xplo06;
	FRM_FindFrame(xplo06, "x_vybuch_06");
Integer rnd;
	rnd=0;
}
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
Whenever alarm(_SignalReceived(1))	// received from BU2_xploset01
{
		rnd=_RandomInt(2000);
	Delay(rnd);

		PlaySound(6, 8);
		Delay(700);
	Block
	{
		PlaySound(6, 2);
		FRM_CreateParticle(48, me);
		FRM_SetOn(xplo06, false);
		MakeExplosion(xplo06, 200000, 15000);
		MakeExplosion(xplo06, 1, 20000);
	}
}
// -------------------------------------------------------------------------------------------------------------
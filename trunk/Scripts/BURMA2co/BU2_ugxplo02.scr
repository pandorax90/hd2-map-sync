// BU2_ugxplo02 - underground explosion effect
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Frame ugxplo02;
	FRM_GetMyFrame(ugxplo02);
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
Whenever detector(_SignalReceived(1))	// received from ugxplo02trig
{
	PlaySound(6, 5);
	MakeExplosion(ugxplo02, 0, 3000);
	FRM_CreateParticle(51, ugxplo02);
	SetWhenever(detector, true);
	GoTo end;
}

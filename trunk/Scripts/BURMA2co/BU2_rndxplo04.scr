// BU2_rndxplo04 - explosion effect
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Frame rndxplo04;
	FRM_FindFrame(rndxplo04, "rndxplo04");
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
OnSignal(1)	// received from BU2_bomber
{
If(_PlayerInRange(50))
{
		PlaySound(6, 8);
		Delay(700);
	Block
	{
		PlaySound(6, 2);
		FRM_CreateParticle(48, rndxplo04);
		MakeExplosion(rndxplo04, 800000, 15000);
	}
}
}
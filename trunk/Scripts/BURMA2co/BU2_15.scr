// BU2_15 - guard in the bunkers
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Frame me;
	FRM_GetMyFrame(me);
// -------------------------------------------------------------------------------------------------------------
// Alarm and AI event settings
// vsetky typy alarmov nastavene na true
//     1 - blizka strelba
//     2 - strelba
//     4 - kroky
//     8 - zvuky (OnUse)
//   16 - explozia
//   32 - vidim
//   64 - zranenie
// 128 - smrtelny vykrik
// 256 - friendly fire
// 512 - vidim mrtvolu
SetAlarmType(280, false);	// vypnute 8, 16, 256

OnAlarm()
{
	EndScript();
}

OnAlarmDone()
{
	HUMAN_SetAlarm(false);
	SetAlarmType(280, false);
	GoTo end;
}
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
Whenever player(_SignalReceived(1))	// received from BU2_15_A1
{
	HUMAN_Suspend(false);
	SetWhenever(player2, false);
	HUMAN_Move("BU2_15_01");
	GoTo end;
}

Whenever player2(_SignalReceived(2))	// received from BU2_15_A2
{
	HUMAN_Suspend(false);
	SetWhenever(player, false);
	HUMAN_Move("BU2_15_02");
	GoTo end;
}
// -------------------------------------------------------------------------------------------------------------
HUMAN_SETAIMODE_Aggressive();
FRM_SwitchFaceTexture(me, "e_f050");
HUMAN_Suspend(true);

Label end:
// BU2_rndxplo12 - explosion effect
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Frame rndxplo12;
	FRM_FindFrame(rndxplo12, "rndxplo12");
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
OnSignal(1)
{
If(_PlayerInRange(50))
{
		PlaySound(6, 8);
		Delay(700);
	Block
	{
		PlaySound(6, 2);
		FRM_CreateParticle(48, rndxplo12);
		MakeExplosion(rndxplo12, 800000, 15000);
	}
}
}
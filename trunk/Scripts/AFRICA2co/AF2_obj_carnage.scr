// AF2_obj_carnage - carnage objectives detector
// -------------------------------------------------------------------------------------------------------------

INTEGER game_type = _SPGetGameType();

// -------------------------------------------------------------------------------------------------------------

DisableSignals(true);

Whenever alldead (_GetCountOfCarnageEnemies() == 0){
  SUBTITLES_SetOn(true);
  SUBTITLES_SetText(20994003);
  Delay(3000);
  SetObjectiveStatus(5, 1);
  goto END;
}

// -------------------------------------------------------------------------------------------------------------

if((game_type == 3) OR (game_type == 7))
{
  SetObjectiveStatus(5, 0);		// carnage init
}
else
{
  SetWhenever(alldead, false);
}

Label END:
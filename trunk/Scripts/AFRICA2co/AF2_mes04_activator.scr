// AF2_activator - turns on the enemies
// -------------------------------------------------------------------------------------------------------------

block{
  FRAME mes03;			FRM_FindFRAME(mes03, "mes03");
  FRAME mes04;			FRM_FindFRAME(mes04, "mes04");
}

// -------------------------------------------------------------------------------------------------------------

Whenever player(_PlayerInRange(300)){
  SendSignal(mes03, 20);
  SendSignal(mes04, 20);
}


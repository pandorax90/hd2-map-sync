// BU1_05 - guarding the bunker
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Block
{
Frame door05;
	FRM_FindFrame(door05, "m_b_buDV_07");
Frame me;
	FRM_GetMyFrame(me);
}
// -------------------------------------------------------------------------------------------------------------
// Alarm and AI event settings
// vsetky typy alarmov nastavene na true
//     1 - blizka strelba
//     2 - strelba
//     4 - kroky
//     8 - zvuky (OnUse)
//   16 - explozia
//   32 - vidim
//   64 - zranenie
// 128 - smrtelny vykrik
// 256 - friendly fire
// 512 - vidim mrtvolu
SetAlarmType(4, false);
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
OnAlarm()
{
Block
{
	HUMAN_SETSIGHTRANGE(55);
	DisableSignals(true);
	HUMAN_SETMODE_Run();
}
	EndScript();
}

OnAlarmDone()
{
	HUMAN_SetAlarm(false);
	DisableSignals(false);
	GoTo end;
}

Whenever player(_PlayerInRange(50))
{
	HUMAN_BoardVehicle("Type97_03", 1, 0);
	HUMAN_SetOptimized(2);
	HUMAN_Suspend(false);
	GoTo end;
}

OnSignal(1)	// received from door05
{
	HUMAN_SetOptimized(1);
	HUMAN_BoardVehicle("Type97_03", 0, 0);
	HUMAN_WeaponOnArm(true);
	HUMAN_TurnAt(door05);
	GoTo end;
}

OnDeath()
{
	HUMAN_BoardVehicle("Type97_03", 0, 0);
	EndScript();
}
// -------------------------------------------------------------------------------------------------------------
// Starting pose
HUMAN_SETAIMODE_Defensive();
FRM_SwitchFaceTexture(me, "e_f050");
HUMAN_Suspend(true);

Label end:
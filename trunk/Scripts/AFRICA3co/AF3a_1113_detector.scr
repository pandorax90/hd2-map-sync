// synchronizer between 11 and 13
// -------------------------------------------------------------------------------------------------------------
// situation == 0 - nikdo nic neslysel
// situation == 1 - 11 slysel podezrele zvuky
// situation == 2 - 13 slysel podezrele zvuky
// situation == 4 - oba slyseli podezrele zvuky

// -------------------------------------------------------------------------------------------------------------

Block{
  FRAME en11;			FRM_FindFrame(en11, "AF3a_11");
  FRAME en13;			FRM_FindFrame(en13, "AF3a_13");
  INTEGER situation 		= 0;
  INTEGER sig1 		= 0;
  INTEGER sig2 		= 0;
  INTEGER sig4 		= 0;
}

// -------------------------------------------------------------------------------------------------------------

OnSignal(1){
  if(situation == 2){
    situation = 4;
  }
  else{
    if(situation != 4){
      situation = 1;
    }  
  }
}

OnSignal(2){
  if(situation == 1){
    situation = 4;
  }
  else{
    if(situation != 4){
      situation = 2;
    }  
  }
}

Whenever detect ((_FrameInRange(en11) < 10) AND (_FrameInRange(en13) < 10)){
//  PrintfNumber("", situation);

  if((situation == 1) AND (sig1 == 0))
  {
    SendSignal(en11, situation);
    SendSignal(en13, situation);
    sig1 = 1;
  }
  if((situation == 2) AND (sig2 == 0))
  {
    SendSignal(en11, situation);
    SendSignal(en13, situation);
    sig2 = 1;
  }
  if((situation == 4) AND (sig4 == 0))
  {
    SendSignal(en11, situation);
    SendSignal(en13, situation);
    sig4 = 1;
  }

  Delay(30000);
  SetWhenever(detect, true);
}

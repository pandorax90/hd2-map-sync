// C5_G36 - soldier in the bunker
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Frame me;
	FRM_GetMyFrame(me);
// -------------------------------------------------------------------------------------------------------------
// Alarm and AI event settings
//     1 - blizka strelba
//     2 - strelba
//     4 - kroky
//     8 - zvuky (OnUse)
//   16 - explozia
//   32 - vidim
//   64 - zranenie
// 128 - smrtelny vykrik
// 256 - friendly fire
// 512 - vidim mrtvolu
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
OnAlarm()
{
	DisableSignals(true);
	EndScript();
}

OnAlarmDone()
{
	HUMAN_SetAlarm(false);
	GoTo end;
}

Whenever signal(_SignalReceived(1))	// received C5_G34_activator01
{
	HUMAN_Suspend(false);
	GoTo end;
}

Whenever signal2(_SignalReceived(2))	// received from C5_G35
{
	HUMAN_Suspend(false);
	HUMAN_Move("C5_G34_01");
	HUMAN_Move("C5_G34_02");
	HUMAN_Move("C5_G34_03");
	GoTo end;
}

// -------------------------------------------------------------------------------------------------------------
Block
{
FRM_SwitchFaceTexture(me, "e_f043");
HUMAN_SETAIMODE_Defensive();
HUMAN_SETMODE_Run();
}
HUMAN_Suspend(true);

Label end:
// AF4_51 - Soldier with bzka on the roof
// -------------------------------------------------------------------------------------------------------------

block{
  INTEGER Atype				= 0;
  SetAlarmType(1023, true);
  INTEGER gd = _SPGetGameDifficulty();
  INTEGER val = 8000 - (2000 * gd);
}

// -------------------------------------------------------------------------------------------------------------

OnDeath(){
  printf("51: dead");
  EndScript();
}

OnAlarm(){
  HUMAN_SetAnim("", 100, 100, false);
  block{
    DisableSignals(true);
    Atype = _GetAlarmType();
    HUMAN_Stop();
    printfnumber("51: ", Atype);
    HUMAN_SetSightRange(100);
  }
  EndScript();
}

OnAlarmDone(){
  block
  {
    SetAlarmType(1023, true);
    SetAlarmType(512, false);
    HUMAN_SetOptimized(1);
    HUMAN_SetAlarm(false);
  }
  goto ALARMDONE;
}

// -------------------------------------------------------------------------------------------------------------

  HUMAN_SetMODE_Walk();
  HUMAN_SETAIMODE_Defensive();
  HUMAN_SetOptimized(1);
  HUMAN_SetAnim("%%sedimL4", 100, 400, true);
  Delay(5000);
  HUMAN_SetAnim("!zeseduR", 400, 400, false);
  Delay(700);
  HUMAN_SetAnim("%%protahovaniD1", 400, 400, true);
  Delay(5000);
  HUMAN_SetAnim("", 400, 400, false);
  Delay(200);
  HUMAN_Move("AF4_51_01");
  HUMAN_Move("AF4_51_02");
  HUMAN_Move("AF4_51_03");
goto END;

Label ALARMDONE:
  HUMAN_SetOptimized(1);
  HUMAN_SetMODE_Crouch();
  HUMAN_SetAlarm(false);

LABEL TURN_LOOP:
  HUMAN_TurnAtNearestPlayer();
  Delay(1000);
goto TURN_LOOP;
  
Label END:
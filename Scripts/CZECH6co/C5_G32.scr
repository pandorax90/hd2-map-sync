// C5_G32 - soldier in the bunker
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Block
{
Frame g33;
	FRM_FindFrame(g33, "C5_G33");
Frame me;
	FRM_GetMyFrame(me);
}
// -------------------------------------------------------------------------------------------------------------
// Alarm and AI event settings
//     1 - blizka strelba
//     2 - strelba
//     4 - kroky
//     8 - zvuky (OnUse)
//   16 - explozia
//   32 - vidim
//   64 - zranenie
// 128 - smrtelny vykrik
// 256 - friendly fire
// 512 - vidim mrtvolu
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
OnAlarm()
{
	EndScript();
}

OnAlarmDone()
{
	HUMAN_SetAlarm(false);
	GoTo end;
}

Whenever signal(_SignalReceived(1))	// received C5_G31_activator01
{
	HUMAN_Suspend(false);
	GoTo end;
}

OnDeath()
{
	SendSignal(g33, 2);
	GoTo end;
}
// -------------------------------------------------------------------------------------------------------------
Block
{
FRM_SwitchFaceTexture(me, "e_f053");
HUMAN_SetOptimized(2);
HUMAN_SETAIMODE_Defensive();
HUMAN_SETMODE_Run();
HUMAN_SetSniper(true, 2);
}
HUMAN_Suspend(true);

Label end:
// C5_G34 - soldier in the bunker
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Block
{
Frame g35;
	FRM_FindFrame(g35, "C5_G35");
Frame me;
	FRM_GetMyFrame(me);
}
// -------------------------------------------------------------------------------------------------------------
// Alarm and AI event settings
//     1 - blizka strelba
//     2 - strelba
//     4 - kroky
//     8 - zvuky (OnUse)
//   16 - explozia
//   32 - vidim
//   64 - zranenie
// 128 - smrtelny vykrik
// 256 - friendly fire
// 512 - vidim mrtvolu
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
OnAlarm()
{
	EndScript();
}

OnAlarmDone()
{
	HUMAN_SetAlarm(false);
	GoTo end;
}

OnSignal(1)	// received C5_G34_activator01
{
	HUMAN_Suspend(false);
	GoTo end;
}

Whenever signal2(_SignalReceived(2))	// received from C5_G37
{
	HUMAN_Suspend(false);
	HUMAN_Move("C5_G34_01");
	HUMAN_Move("C5_G34_02");
	HUMAN_Move("C5_G34_03");
	GoTo end;
}

OnDeath()
{
	SendSignal(g35, 2);
	GoTo end;
}
// -------------------------------------------------------------------------------------------------------------
Block
{
FRM_SwitchFaceTexture(me, "e_f039");
HUMAN_SETAIMODE_Zombie();
HUMAN_SETMODE_Run();
}
HUMAN_Suspend(true);

Label end:
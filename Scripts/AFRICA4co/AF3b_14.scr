// AF3b_14
// -------------------------------------------------------------------------------------------------------------

block{
  FRAME organizer;		FRM_FindFrame(organizer, "dummy_organizer");
  FRAME this;			FRM_GetMyFrame(this);
  INTEGER randdist 		= _RandomInt(80)+40;
  INTEGER rnd			= 0;
  INTEGER Atype		= 0;
  INTEGER AtPos		= 0;

  SetAlarmType(1023, true);		// all alarm events on
  SetAlarmType(924, false);		// 512, 256, 128, 16, 8, 4, 2
}

// -------------------------------------------------------------------------------------------------------------

OnSignal(22){			// RETREAT SECTION
  SetAlarmType(1023, false);
  DisableSignals(true);
  HUMAN_Stop();
  HUMAN_SetMODE_Run();
  HUMAN_Move("AF3b_retreat");
  goto END;
}

OnDeath(){
  FORMATION_DelMember(this);
  SendSignal(organizer, 1);
  EndScript();
}
  
OnAlarm(){
  block{
    FORMATION_DelMember(this);
    HUMAN_Suspend(false);
    Atype = _GetAlarmType();
//    printfnumber("14: ", Atype);
  }
  if((_PlayerInRange(randdist)) OR (Atype == 16)){
      HUMAN_Stop();
      EndScript();
  }
  else
  {
    HUMAN_SetAlarm(false);
    HUMAN_SetMODE_Run();
    HUMAN_MoveToAlarm();
    HUMAN_SetOptimized(1);
  }
  HUMAN_SetOptimized(1);
  goto ACTIVITY1;
}

OnAlarmDone(){
  SetAlarmType(1023, true);
  HUMAN_SETMODE_Run();
  HUMAN_SetAlarm(false);
  HUMAN_SetOptimized(1);
  if(AtPos != 3){
    AtPos = 2;
    goto ACTIVITY1;
  }
  HUMAN_SetAlarm(false);
  goto CROUCH_END;
}

OnSignal(1){
  HUMAN_Suspend(false);
  HUMAN_SetOptimized(1);
  SetAlarmType(256, false);
  HUMAN_SetMODE_Run();
  goto ACTIVITY1;
}

OnSignal(2){
  HUMAN_Suspend(false);
  HUMAN_SetOptimized(1);
  SetAlarmType(1023, true);
  SetAlarmType(512, false);
  HUMAN_SETMODE_Walk();
  HUMAN_SetAlarm(false);
  goto END;
}

OnSignal(3){
  HUMAN_Move("AF3b_14_03");
  goto CROUCH_END; 
}

// -------------------------------------------------------------------------------------------------------------

  rnd = _RandomInt(2);
  if(rnd == 0){  HUMAN_SETAIMODE_Aggressive();}
  if(rnd == 1){  HUMAN_SETAIMODE_Defensive();}
  HUMAN_SetSightRange(300);
  HUMAN_SETMODE_Run();
  HUMAN_SetOptimized(1);
  HUMAN_Suspend(true);
  HUMAN_SetEvents(true);
goto END;

Label ACTIVITY1:
  if(AtPos == 0){
    HUMAN_Move("AF3b_14_01");
    AtPos = 1;
    goto ACTIVITY1;
  }
  if(AtPos == 1){
    HUMAN_Move("AF3b_14_02");
    AtPos = 2;
    goto ACTIVITY1;
  }
  if(AtPos == 2){
    HUMAN_Move("AF3b_14_03");
    AtPos = 3;
  }
goto CROUCH_END;

Label CHANGEPOS:
  rnd = _RandomInt(2);
  if(rnd == 0){ HUMAN_SetMODE_Stand();}
  if(rnd == 1){ HUMAN_SetMODE_Crouch();}
return;

Label CROUCH_END:
  HUMAN_SetOptimized(1);
  HUMAN_SETMODE_Crouch();
  HUMAN_WeaponOnArm(true);
Label CROUCH_END_LOOP:
  HUMAN_TurnAtNearestPlayer();
  Delay(1500);
goto CROUCH_END_LOOP;  

Label END:
  HUMAN_SetOptimized(1);
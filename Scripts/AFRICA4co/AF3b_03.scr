// AF3b_03
// -------------------------------------------------------------------------------------------------------------

block{
  FRAME organizer;		FRM_FindFrame(organizer, "dummy_organizer");
  INTEGER Atype		= 0;

  FRAME dummy_turnat;		FRM_FindFrame(dummy_turnat, "dummy_group01_turnat");

  SetAlarmType(1023, false);
}

// -------------------------------------------------------------------------------------------------------------

OnSignal(22){			// RETREAT SECTION
  SetAlarmType(1023, false);
  DisableSignals(true);
  HUMAN_Stop();
  HUMAN_SetMODE_Run();
  HUMAN_Move("AF3b_retreat");
  goto END;
}

OnDeath(){
  SendSignal(organizer, 1);
  EndScript();
}
  
OnAlarm(){
  block{
    HUMAN_Stop();
    HUMAN_Suspend(false);
    HUMAN_SetOptimized(0);
    Atype = _GetAlarmType();
//    printfnumber("03: ", Atype);
  }

  If(Atype == 2){
    EndScript();
  }

  If(Atype == 256){
    HUMAN_TurnAtNearestPlayer();
    HUMAN_SetAlarm(false);
    goto END;
  }

  if(((Atype != 32) AND (Atype != 64)) AND (Atype != 1)){
    HUMAN_SetMODE_Run();
    HUMAN_SetAlarm(false);
    HUMAN_MoveToAlarm();
    goto END;
  }

  EndScript();
}

OnAlarmDone(){
  goto END;
}

OnSignal(1){
  HUMAN_Suspend(false);
  HUMAN_SetOptimized(1);
  goto ACTIVITY;
}

OnSignal(2){
  HUMAN_Suspend(false);
  goto ESCAPEVEHICLE;
}

// -------------------------------------------------------------------------------------------------------------

  HUMAN_SetOptimized(1);
  HUMAN_SetSightRange(300);
  HUMAN_SETMODE_Run();
  HUMAN_SETAIMODE_Aggressive();
  HUMAN_BoardVehicle("Opel01", 1, 2);
//  HUMAN_Suspend(true);
//  HUMAN_SETEVENTS(true);
goto END;

Label ACTIVITY:

Label ESCAPEVEHICLE:
  HUMAN_BoardVehicle("", 0, 2); 
  SetAlarmType(1023, true);
  SetAlarmType(768, false);
  Delay(2000);
  HUMAN_SetMode_Walk();
  HUMAN_Move("AF3b_03_01");
  HUMAN_SetMODE_Crouch();
  HUMAN_TurnAt(dummy_turnat);
  HUMAN_LookAround(2);
  HUMAN_SetOptimized(0);

Label END:
Label DESTROY_FORMATION:
  block
  {
    SendSignal(organizer, 1);
    FORMATION_DelMember(m01);
    FORMATION_DelMember(m02);
    FORMATION_DelMember(m03);
    FORMATION_DelMember(m04);
    FORMATION_DelMember(m05);
//    FORMATION_DelMember(this);
    SendSignal(m01, 3);
    SendSignal(m02, 3);
    SendSignal(m03, 3);
    SendSignal(m04, 3);
    SendSignal(m05, 3);
  }
  if(in_formation)
  {
    FORMATION_Destroy(this);
    in_formation = 0;
  }
goto CROUCH_END;

Label CROUCH_END:
  HUMAN_SetOptimized(1);
  HUMAN_SETMODE_Crouch();
  HUMAN_WeaponOnArm(true);
Label CROUCH_END_LOOP:
  HUMAN_TurnAtNearestPlayer();
  Delay(1500);
goto CROUCH_END_LOOP;  

Label END:
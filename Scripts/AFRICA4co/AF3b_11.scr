// AF3b_11 - soldier in the first attack group
// -------------------------------------------------------------------------------------------------------------

block{
  FRAME organizer;			FRM_FindFrame(organizer, "dummy_organizer");
  FRAME this;				FRM_GetMyFrame(this);
  INTEGER randdist 			= _RandomInt(80)+40;
  INTEGER rnd				= 0;
  INTEGER Atype			= 0;
  INTEGER AtPos			= 0;
  INTEGER in_formation		= 0;		// je tym ve formaci?

  SetAlarmType(1023, true);		// all alarm events on
  SetAlarmType(924, false);		// 512, 256, 128, 16, 8, 4, 2
}

//members of formation
  FRAME m01;			FRM_FindFrame(m01, "AF3b_14");
  FRAME m02;			FRM_FindFrame(m02, "AF3b_17");
  FRAME m03;			FRM_FindFrame(m03, "AF3b_20");
  FRAME m04;			FRM_FindFrame(m04, "AF3b_23");
  FRAME m05;			FRM_FindFrame(m05, "AF3b_31");
  INTEGER act_distance;	

  FORMATION_Create(this);
  in_formation = 1;
  FORMATION_AddMember(m01, this);
  FORMATION_AddMember(m02, this);
  FORMATION_AddMember(m03, this);
  FORMATION_AddMember(m04, this);
  FORMATION_AddMember(m05, this);
  FORMATION_SetTypeQuad2X3(this);
  

// -------------------------------------------------------------------------------------------------------------

OnSignal(22){			// RETREAT SECTION
  SetAlarmType(1023, false);
  DisableSignals(true);
  HUMAN_Stop();
  HUMAN_SetMODE_Run();
  HUMAN_Move("AF3b_retreat");
  goto END;
}

OnDeath(){
  block
  {
    SendSignal(organizer, 1);
    FORMATION_DelMember(m01);
    FORMATION_DelMember(m02);
    FORMATION_DelMember(m03);
    FORMATION_DelMember(m04);
    FORMATION_DelMember(m05);
//    FORMATION_DelMember(this);
    SendSignal(m01, 3);
    SendSignal(m02, 3);
    SendSignal(m03, 3);
    SendSignal(m04, 3);
    SendSignal(m05, 3);
  }
  if(in_formation)
  {
    FORMATION_Destroy(this);
    in_formation = 0;
  }
  EndScript();
}

OnAlarm(){
  block
  {
    act_distance = _GetDistToActivePlayer();
    HUMAN_Suspend(false);
    HUMAN_Stop();
    Atype = _GetAlarmType();
//    printfnumber("11: ", Atype);
  }

  if((((Atype == 32) OR (Atype == 64)) OR (Atype == 1)) AND (_PlayerInRange(randdist))){
    EndScript();
  }
  if(AtPos > 1){
    HUMAN_SetAlarm(false);
    HUMAN_MoveToAlarm();     
    goto END;
  }
  HUMAN_SetAlarm(false);
  HUMAN_SetOptimized(1);
  goto ACTIVITY1;
}

OnAlarmDone(){
  HUMAN_SETMODE_Run();
  HUMAN_SetAlarm(false);
  HUMAN_SetOptimized(1);
  goto ACTIVITY1;
}

OnSignal(1){
  HUMAN_Suspend(false);
  SetAlarmType(264, true);			// 256, 8
  HUMAN_WeaponOnArm(true);
  HUMAN_SetMODE_Run();
  FORMATION_SetScale(this, 500);
  HUMAN_SetOptimized(1);
  goto ACTIVITY;
}

OnSignal(2){
  HUMAN_Suspend(false);
  HUMAN_WeaponOnArm(false);
  HUMAN_SetMODE_Walk();
  Delay(2000);
  HUMAN_SetOptimized(1);
  goto ACTIVITY;
}

// -------------------------------------------------------------------------------------------------------------

  rnd = _RandomInt(2);
  if(rnd == 0){  HUMAN_SETAIMODE_Aggressive();}
  if(rnd == 1){  HUMAN_SETAIMODE_Defensive();}
  HUMAN_SetSightRange(300);
  HUMAN_SETMODE_Run();
  HUMAN_SetOptimized(1);
  HUMAN_Suspend(true);
  HUMAN_SetEvents(true);
goto END;

Label ACTIVITY:
  Delay(2000);
Label ACTIVITY1:
  if(AtPos == 0){
    HUMAN_Move("AF3b_c1_01");
    AtPos = 1;
    goto ACTIVITY1;
  }
  if(AtPos == 1){
    HUMAN_Move("AF3b_c1_02");
    AtPos = 2;
    goto ACTIVITY1;
  }
  if(AtPos == 2){
    HUMAN_Move("AF3b_c1_03");
    AtPos = 3;
    goto ACTIVITY1;
  }
  if(AtPos == 3){
    HUMAN_Move("AF3b_c1_04");
    AtPos = 4;
    goto ACTIVITY1;
  }
  if(AtPos == 4){
    HUMAN_Move("AF3b_c1_05");
    AtPos = 5;
    goto DESTROY_FORMATION;
  }
goto END;

Label ACTIVITY2:
  HUMAN_Move("AF3b_11_03");
  goto CROUCH_END;
goto END;


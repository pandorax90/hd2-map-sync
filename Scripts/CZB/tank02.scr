SendSignal(posadka2, 2);
HUMAN_BoardVehicle("La_tiger_5",  true, 0);
Delay(50000);
HUMAN_Drive("C5_tank11", 10);
goto END;
}

OnDeath(){
EndScript();
}

OnAlarm(){
goto END;
}

OnAlarmDone(){
  HUMAN_SetAlarm(false);
  goto END;
}

// -------------------------------------------------------------------------------------------------------------

HUMAN_Suspend(true);
goto END;


// BU2_Allied08 - allied soldier
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Block
{
Frame shoot01;
	FRM_FindFrame(shoot01, "BU2_A06_shoot01");
Frame me;
	FRM_GetMyFrame(me);
}
// -------------------------------------------------------------------------------------------------------------
// Alarm and AI event settings
// vsetky typy alarmov nastavene na true
//     1 - blizka strelba
//     2 - strelba
//     4 - kroky
//     8 - zvuky (OnUse)
//   16 - explozia
//   32 - vidim
//   64 - zranenie
// 128 - skriptovy alarm
// 256 - friendly fire
// 512 - vidim mrtvolu
HUMAN_SETEVENTS(false);
SetAlarmType(1023, false);
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
// -------------------------------------------------------------------------------------------------------------
HUMAN_SETMODE_Run();
FRM_SwitchFaceTexture(me, "e_f056");

Label beh:
	Delay(1501);
	Delay(5000);
	HUMAN_SetOptimized(1);
	HUMAN_Move("BU2_A08_01");
	HUMAN_TurnAt(shoot01);
	HUMAN_Attack(shoot01, 3000);
	Delay(1000);
	HUMAN_Attack(shoot01, 2000);
	If(_PlayerInRange(15))
	{
		HUMAN_Kill(me);
		GoTo end;
	}

	Block
	{
		PlaySound(6, 2);
		FRM_CreateParticle(49, me);
		MakeExplosion(me, 1200000, 15000);
	}

Label end:
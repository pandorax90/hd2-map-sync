// BU2_rndxplo05 - explosion effect
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Frame rndxplo05;
	FRM_FindFrame(rndxplo05, "rndxplo05");
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
OnSignal(1)	// received from BU2_bomber
{
If(_PlayerInRange(50))
{
		PlaySound(6, 8);
		Delay(700);
	Block
	{
		PlaySound(6, 2);
		FRM_CreateParticle(48, rndxplo05);
		MakeExplosion(rndxplo05, 800000, 15000);
	}
}
}
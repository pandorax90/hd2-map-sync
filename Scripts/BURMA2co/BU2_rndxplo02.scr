// BU2_rndxplo02 - explosion effect
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Frame rndxplo02;
	FRM_FindFrame(rndxplo02, "rndxplo02");
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
OnSignal(1)	// received from BU2_bomber
{
If(_PlayerInRange(50))
{
		PlaySound(6, 8);
		Delay(700);
	Block
	{
		PlaySound(6, 2);
		FRM_CreateParticle(48, rndxplo02);
		MakeExplosion(rndxplo02, 800000, 15000);
	}
}
}
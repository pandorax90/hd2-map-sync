// BU2_xplo12 - explosion effect
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Block
{
Frame me;
	FRM_GetMyFrame(me);
Frame xplo12;
	FRM_FindFrame(xplo12, "x_vybuch_12");
Integer rnd;
	rnd=0;
}
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
Whenever alarm(_SignalReceived(1))	// received from BU2_xploset02
{
		rnd=_RandomInt(2000);
	Delay(rnd);

		PlaySound(6, 8);
		Delay(700);
	Block
	{
		PlaySound(6, 2);
		FRM_CreateParticle(48, me);
		FRM_SetOn(xplo12, false);
		MakeExplosion(xplo12, 200000, 15000);
		MakeExplosion(xplo12, 1, 20000);
	}
}
// -------------------------------------------------------------------------------------------------------------
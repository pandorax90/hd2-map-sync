// Variables definition
Frame ugxplo09;
	FRM_GetMyFrame(ugxplo09);
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
Whenever detector(_SignalReceived(1))	// received from ugxplo09trig
{
	PlaySound(6, 5);
	MakeExplosion(ugxplo09, 0, 3000);
	FRM_CreateParticle(51, ugxplo09);
	SetWhenever(detector, true);
	GoTo end;
}

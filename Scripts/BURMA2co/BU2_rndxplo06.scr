// BU2_rndxplo06 - explosion effect
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Frame rndxplo06;
	FRM_FindFrame(rndxplo06, "rndxplo06");
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
OnSignal(1)	// received from BU2_bomber
{
If(_PlayerInRange(50))
{
		PlaySound(6, 8);
		Delay(700);
	Block
	{
		PlaySound(6, 2);
		FRM_CreateParticle(48, rndxplo06);
		MakeExplosion(rndxplo06, 800000, 15000);
	}
}
}
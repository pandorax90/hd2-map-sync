// BU2_rndxplo15 - explosion effect
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Frame rndxplo15;
	FRM_FindFrame(rndxplo15, "rndxplo15");
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
OnSignal(1)
{
If(_PlayerInRange(50))
{
		PlaySound(6, 8);
		Delay(700);
	Block
	{
		PlaySound(6, 2);
		FRM_CreateParticle(48, rndxplo15);
		MakeExplosion(rndxplo15, 800000, 15000);
	}
}
}
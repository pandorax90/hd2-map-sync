// BU2_rndxplo09 - explosion effect
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Frame rndxplo09;
	FRM_FindFrame(rndxplo09, "rndxplo09");
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
OnSignal(1)	// received from BU2_bomber
{
If(_PlayerInRange(50))
{
		PlaySound(6, 8);
		Delay(700);
	Block
	{
		PlaySound(6, 2);
		FRM_CreateParticle(48, rndxplo09);
		MakeExplosion(rndxplo09, 800000, 15000);
	}
}
}
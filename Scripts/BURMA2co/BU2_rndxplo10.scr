// BU2_rndxplo10 - explosion effect
// -------------------------------------------------------------------------------------------------------------
// Variables definition
Frame rndxplo10;
	FRM_FindFrame(rndxplo10, "rndxplo10");
// -------------------------------------------------------------------------------------------------------------
// Whenever keywords and signals
OnSignal(1)	// received from BU2_bomber
{
If(_PlayerInRange(50))
{
		PlaySound(6, 8);
		Delay(700);
	Block
	{
		PlaySound(6, 2);
		FRM_CreateParticle(48, rndxplo10);
		MakeExplosion(rndxplo10, 800000, 15000);
	}
}
}